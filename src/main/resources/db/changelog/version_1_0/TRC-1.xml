<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">
    <changeSet id="TRC-1-0" author="Alex Prokopiev">
        <sql>
            CREATE SCHEMA IF NOT EXISTS todo_app;
        </sql>
    </changeSet>
    <changeSet id="TRC-1-1" author="Alex Prokopiev">
        <createTable tableName="users" schemaName="todo_app">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>